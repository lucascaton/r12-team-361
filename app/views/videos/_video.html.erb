<div class="<%= video.presentation %>" data-video_id="<%= video.youtube_id %>">
  <%= image_tag("http://cdn1.iconfinder.com/data/icons/socialmediaicons_v120/48/youtube.png", :class => "link-to-play alternative-to-play") %>
  <%= image_tag("http://img.youtube.com/vi/#{video.youtube_id}/0.jpg", :class => "image-preview") %>

  <div class="span6">
    <%= link_to('javascript:;', :class => "close-video btn btn-mini btn-danger") do %>
      <i class='icon-remove'></i> Close
    <% end %>

    <h2><%= video.title %></h2>
    <p>
      <%= video.description %>
    </p>
    <%= link_to("Vote", '', :class => "btn btn-system-default #{'disabled' unless user_signed_in?}", :rel => "tooltip", :"data-placement" => "top", :"data-original-title" => 'You must be logged in order to upload.')%>
    <%= render "share_on_social_media", video: video %>
    <%= video.sponsored_mark %>
  </div>
  <div class="video-frame span8" id="<%= video.youtube_id %>"></div>
  <!-- <a href="#" class="close-video">fechar</a> -->
</div>
