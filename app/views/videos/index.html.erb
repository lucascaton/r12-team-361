<div class="span10 videos-list">
  <form>
    <div class="input-append">
      <input class="span8" id="appendedInputButtons" placeholder="Buscar" size="16" type="search">
      <button class="btn" type="button">Search</button>
      <button data-toggle="modal" data-target="#newVideo" class="btn btn-upload <%= 'disabled' unless user_signed_in? %>" rel="tooltip" data-placement="top" data-original-title="You must be logged in order to upload." type="button">Upload</button>
    </div>
  </form>
  <% @videos.each do |video| %>
    <%= render video %>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="modal fade" id="newVideo">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Create a new video</h3>
    </div>
    <div class="modal-body">
      <ul>
        <li>
          <label>YouTube url:<br />
            <input type="text" class="span6" />
          </label>
        </li>
        <li>
          <label>Video Title:<br />
            <input type="text" class="span6 videoTitle"  />
          </label>
        </li>
        <li>
          <label>Video description:<br />
            <textarea class="span6 videoDescription"></textarea><br />
            <sup></sup>
          </label>
        </li>

      </ul>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <a href="#" class="btn btn-primary">Save changes</a>
    </div>
  </div>
<% end %>