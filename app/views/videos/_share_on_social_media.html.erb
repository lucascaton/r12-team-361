<div class="popover top <%= video.youtube_id %>">
  <div class="arrow"></div>
  <h3 class="popover-title">Share</h3>
  <div class="popover-content">
    <p>
      <%= link_to(image_tag('http://cdn4.iconfinder.com/data/icons/social_balloons/48px/social_balloon-14.png'), "http://www.facebook.com/sharer.php?u=#{request.url}show/#{video.id}&t=#{video.title}")%>
      <%= link_to(image_tag('http://cdn4.iconfinder.com/data/icons/social_balloons/48px/social_balloon-05.png'), "http://twitter.com/share?url=#{request.url}show/#{video.id}&text=#{video.title}")%>
      <%= link_to(image_tag('http://cdn1.iconfinder.com/data/icons/social_balloons/48px/social_balloon-19.png'), "http://plus.google.com/share?url=#{request.url}show/#{video.id}")%>
    </p>
    <div class="popover-footer"></div>
  </div>
</div>
<%= link_to("Share", '', :class => "btn btn-system-default popover-click")%>
